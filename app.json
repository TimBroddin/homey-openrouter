  "name": {
    "en": "OpenRouter"
  },
  "description": {
    "en": "Generate text using AI models from OpenAI, Anthropic, Google, and more via OpenRouter."
  },
  "category": [
    "internet"
  ],
  "permissions": [],
  "images": {
    "small": "/assets/images/small.png",
